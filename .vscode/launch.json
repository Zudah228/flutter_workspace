{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run debug",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--debug",
            ]
        },
        {
            "name": "Run dev debug",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--debug",
                "--dart-define=FLAVOR=dev"
            ]
        },
        {
            "name": "Run dev debug Chrome",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--debug",
                "--dart-define=FLAVOR=dev",
                "-d", "chrome"
            ]
        },
    ]
}